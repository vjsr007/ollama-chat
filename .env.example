############################################################
# Environment variables example (.env)                      #
# Copy this file to .env and fill in required values        #
############################################################

# ----------------------------------------------------------
# Ollama (local inference)
# Base URL of the Ollama daemon
OLLAMA_BASE_URL=http://localhost:11434

# ----------------------------------------------------------
# External Model Providers (OPTIONAL)
# NOTE: Keys are usually stored securely via keytar
#       from the "Models" interface. These variables are
#       for reference or alternative initialization only.
#       (Leave empty or remove if unused.)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
COHERE_API_KEY=
MISTRAL_API_KEY=
GOOGLE_API_KEY=
# If you use a custom OpenAI-compatible endpoint
CUSTOM_OPENAI_BASE_URL=

# GitHub / Copilot
# Used by GitHub MCP and/or integrations consuming the API
GITHUB_TOKEN=your_github_token_here

# ----------------------------------------------------------
# Search / Web Integrations
# Brave Search (for web search tools)
BRAVE_API_KEY=your_brave_api_key_here

# ----------------------------------------------------------
# LinkedIn (OAuth2 for linkedin MCP server)
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
LINKEDIN_REDIRECT_URI=http://localhost:5173/linkedin-oauth-callback
# Scopes space-separated; minimum for text post: r_liteprofile w_member_social
LINKEDIN_SCOPES=r_liteprofile w_member_social
# After obtaining (via linkedin_exchange_code) you can temporarily place the access token here
LINKEDIN_ACCESS_TOKEN=

# ----------------------------------------------------------
# Databases / Persistence (for related MCPs)
POSTGRES_CONNECTION_STRING=postgresql://user:password@localhost:5432/database

# ----------------------------------------------------------
# General MCP Settings
MCP_LOG_LEVEL=info          # trace | debug | info | warn | error
MCP_TIMEOUT=30000           # ms timeout for tool calls
MCP_MAX_CONCURRENT_TOOLS=5  # max simultaneous tool calls

# ----------------------------------------------------------
# Placeholders for future integrations (example)
# AZURE_OPENAI_API_KEY=
# AZURE_OPENAI_ENDPOINT=
# PERPLEXITY_API_KEY=
# SERPAPI_KEY=

# End of file
