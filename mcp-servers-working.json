{
  "version": "1.0.0",
  "description": "Configuración de servidores MCP para Ollama Chat - Solo servidores funcionales",
  "servers": {
    "filesystem": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-filesystem",
        "D:\\MyProjects\\ollama-chat"
      ],
      "description": "Acceso seguro al sistema de archivos",
      "category": "core",
      "enabled": true
    },
    "github": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-github"
      ],
      "description": "Integración con GitHub (repos, issues, PRs)",
      "category": "development",
      "enabled": true
    },
    "puppeteer": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-puppeteer"
      ],
      "description": "Automatización web con Puppeteer",
      "category": "automation",
      "enabled": true
    },
    "memory": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-memory"
      ],
      "description": "Sistema de memoria persistente",
      "category": "core",
      "enabled": true
    },
    "brave-search": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-brave-search"
      ],
      "description": "Búsqueda web con Brave Search API (requiere BRAVE_API_KEY)",
      "category": "search",
      "enabled": false,
      "env": {
        "BRAVE_API_KEY": ""
      }
    }
  }
}
