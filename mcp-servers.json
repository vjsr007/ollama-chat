{
  "version": "1.0.0",
  "description": "MCP servers configuration for Ollama Chat - Functional servers only",
  "servers": {
    "filesystem": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-filesystem",
        "C:\\"
      ],
      "description": "Unrestricted file system access - full computer access",
      "category": "core",
      "enabled": true,
      "priority": 5,
      "env": {
        "MCP_FILESYSTEM_ALLOW_PARENT": "true"
      }
    },
    "github": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-github"
      ],
      "description": "GitHub integration (repos, issues, PRs)",
      "category": "development",
      "enabled": true
    },
    "puppeteer": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-puppeteer"
      ],
      "description": "Web automation with Puppeteer",
      "category": "automation",
      "enabled": true
    },
    "memory": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-memory"
      ],
      "description": "Persistent memory system",
      "category": "core",
      "enabled": true
    },
    "brave-search": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-brave-search"
      ],
      "description": "Web search with Brave Search API (requires BRAVE_API_KEY)",
      "category": "search",
      "enabled": false,
      "env": {
        "BRAVE_API_KEY": ""
      }
    },
    "copilot-terminal": {
      "type": "stdio",
      "command": "node",
      "args": [
        "src/shared/infrastructure/mcp/servers/copilot-terminal-server.js"
      ],
      "description": "AI-powered terminal assistance with Copilot integration",
      "category": "development",
      "enabled": true,
      "priority": 1,
      "env": {
        "NODE_ENV": "production",
        "MAX_TERMINALS": "20",
        "COMMAND_TIMEOUT": "30000"
      }
    },
    "system-access": {
      "type": "stdio",
      "command": "node",
      "args": [
        "src/shared/infrastructure/mcp/servers/system-access-server.js"
      ],
      "description": "Unrestricted system access - complete file system, command execution",
      "category": "system",
      "enabled": true,
      "priority": 2,
      "env": {
        "UNRESTRICTED_ACCESS": "true"
      }
    },
    "process-control": {
      "type": "stdio",
      "command": "node",
      "args": [
        "src/shared/infrastructure/mcp/servers/process-control-server.js"
      ],
      "description": "Full process and service control - start, stop, monitor, manage",
      "category": "system",
      "enabled": true,
      "priority": 3,
      "env": {
        "ADMIN_PRIVILEGES": "true"
      }
    },
    "hardware-access": {
      "type": "stdio",
      "command": "node",
      "args": [
        "src/shared/infrastructure/mcp/servers/hardware-access-server.js"
      ],
      "description": "Hardware and device access - sensors, drivers, performance counters",
      "category": "hardware",
      "enabled": true,
      "priority": 4,
      "env": {
        "HARDWARE_ACCESS": "unrestricted"
      }
    }
  }
}
