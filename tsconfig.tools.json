{
  "extends": "./tsconfig.shared.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "outDir": "./dist/tools",
    "rootDir": "./src/tools"
  },
  "include": [
    "src/tools/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
