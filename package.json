{
  "name": "ollama-chat",
  "version": "0.1.0",
  "private": true,
  "description": "Local ChatGPT-style chat application with Electron and Ollama model support (text and vision) plus MCP integration",
  "main": "dist/main/main/electron-main.js",
  "author": "OllamaChat",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm:dev:main\" \"npm:dev:renderer\"",
    "dev:main": "tsc -w --project tsconfig.main.json",
    "dev:renderer": "vite",
    "build": "npm run build:clean && npm run build:types && npm run build:renderer && npm run build:main",
    "build:clean": "rimraf dist",
    "build:types": "tsc -p tsconfig.shared.json && tsc -p tsconfig.preload.json",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "start": "electron .",
    "package": "npm run build && electron-builder",
    "prepackage:msi": "node scripts/generate-icon.js",
    "prepackage:win": "node scripts/generate-icon.js",
    "package:win": "npm run prepackage:win && npm run build && electron-builder --win",
    "package:msi": "npm run prepackage:msi && npm run build && electron-builder --win msi",
    "package:msi:simple": "npm run prepackage:msi && npm run build && set EB_MAX_THREADS=1 && electron-builder --win msi",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --max-warnings=0",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,css}\"",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "mcp:setup": "ts-node src/tools/mcp-setup.ts",
    "mcp:test": "ts-node src/tools/mcp-test.ts",
    "mcp:quick": "npx ts-node --project tsconfig.tools.json src/tools/quick-install.ts",
    "setup:full": "npx ts-node --project tsconfig.tools.json src/tools/full-setup.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3",
    "@types/prismjs": "^1.26.5",
    "@upstash/context7-mcp": "^1.0.16",
    "axios": "^1.7.2",
    "chokidar": "^3.6.0",
    "cors": "^2.8.5",
    "dompurify": "^3.1.6",
    "dotenv": "^16.4.5",
    "electron-store": "^9.0.0",
    "express": "^4.19.2",
    "fuse.js": "^7.0.0",
    "glob": "^10.3.12",
    "keytar": "^7.9.0",
    "lodash": "^4.17.21",
    "marked": "^12.0.0",
    "node-fetch": "^3.3.2",
    "playwright": "^1.55.0",
    "prismjs": "^1.30.0",
    "puppeteer": "^23.11.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "semver": "^7.6.0",
    "uuid": "^9.0.1",
    "ws": "^8.18.0",
    "yaml": "^2.4.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/cors": "^2.8.17",
    "@types/dompurify": "^3.0.5",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.0",
    "@types/node": "^20.14.9",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "png-to-ico": "^2.1.5",
    "pngjs": "^7.0.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vite": "^5.2.0"
  },
  "build": {
    "productName": "OllamaChat",
    "appId": "com.example.ollamachat",
    "asar": true,
    "compression": "store",
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": ".",
        "to": "config",
        "filter": [
          "mcp-servers.json",
          "mcp-servers-working.json",
          "mcp-servers-backup.json",
          "mcp-config-simple.json",
          "unsafe-servers/**",
          "integration-servers/**"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis",
        "msi"
      ],
      "icon": "assets/icon.ico",
      "artifactName": "${productName}-Setup-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "Ollama Chat",
      "uninstallDisplayName": "Ollama Chat"
    },
    "msi": {
      "shortcutName": "Ollama Chat",
      "perMachine": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  }
}
