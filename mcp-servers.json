{
  "version": "1.0.0",
  "description": "MCP server configuration for Ollama Chat (generated by full-setup)",
  "servers": {
    "filesystem": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-filesystem",
        "D:\\MyProjects\\ollama-chat"
      ],
      "description": "Secure file system access",
      "category": "core",
      "enabled": false
    },
    "brave-search": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-brave-search"
      ],
  "description": "Web search using Brave Search API",
      "category": "search",
      "enabled": false
    },
    "github": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-github"
      ],
  "description": "GitHub integration (repos, issues, PRs)",
      "category": "development",
      "enabled": false
    },
    "postgres": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-postgres"
      ],
  "description": "PostgreSQL database connection",
      "category": "database",
      "enabled": false
    },
    "sqlite-local": {
      "type": "stdio",
      "command": "node",
      "args": [
        "integration-servers/sqlite-server.js"
      ],
      "description": "Local SQLite query server (read-only SELECT)",
      "category": "database",
      "enabled": false,
      "note": "Replaces missing @modelcontextprotocol/server-sqlite"
    },
    "puppeteer": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-puppeteer"
      ],
  "description": "Web automation with Puppeteer",
      "category": "automation",
      "enabled": false
    },
    "memory": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-memory"
      ],
  "description": "Persistent memory system",
      "category": "core",
      "enabled": false
    },
    "docker-local": {
      "type": "stdio",
      "command": "node",
      "args": [
        "integration-servers/docker-server.js"
      ],
      "description": "Local Docker CLI wrapper (ps, images)",
      "category": "infrastructure",
      "enabled": false,
      "note": "Replaces missing @modelcontextprotocol/server-docker"
    },
    "fetch-local": {
      "type": "stdio",
      "command": "node",
      "args": [
        "integration-servers/fetch-server.js"
      ],
      "description": "Simple HTTP GET fetch tool",
      "category": "network",
      "enabled": false,
      "note": "Replaces missing @modelcontextprotocol/server-fetch"
    },
    "git-missing": {
      "type": "stdio",
      "command": "echo",
      "args": [
        "'@modelcontextprotocol/server-git missing (use github server instead)'"
      ],
      "description": "Placeholder for missing git server (use github instead)",
      "category": "development",
      "enabled": false,
      "missing": true
    }
    ,
    "system-access": {
      "type": "stdio",
      "command": "node",
      "args": [
        "unsafe-servers/system-access-server.js"
      ],
      "description": "DANGEROUS: Full system access (files, processes, commands). Disabled by default.",
      "category": "dangerous",
      "enabled": false
    },
    "process-control": {
      "type": "stdio",
      "command": "node",
      "args": [
        "unsafe-servers/process-control-server.js"
      ],
      "description": "DANGEROUS: Process & service management (start/kill/list). Disabled by default.",
      "category": "dangerous",
      "enabled": false
    }
      ,
      "playwright": {
        "type": "stdio",
        "command": "node",
        "args": [
          "integration-servers/playwright-server.js"
        ],
        "description": "Web automation using Playwright (headless Chromium)",
        "category": "automation",
        "enabled": false
      },
      "outlook": {
        "type": "stdio",
        "command": "node",
        "args": [
          "integration-servers/outlook-server.js"
        ],
        "description": "Outlook / Microsoft Graph email access (read)",
        "category": "productivity",
        "enabled": false
      },
      "telegram": {
        "type": "stdio",
        "command": "node",
        "args": [
          "integration-servers/telegram-server.js"
        ],
        "description": "Telegram Bot messaging (send messages)",
        "category": "messaging",
        "enabled": false
      },
      "whatsapp": {
        "type": "stdio",
        "command": "node",
        "args": [
          "integration-servers/whatsapp-server.js"
        ],
        "description": "WhatsApp Cloud API messaging (send text)",
        "category": "messaging",
        "enabled": false
      },
      "facebook-instagram": {
        "type": "stdio",
        "command": "node",
        "args": [
          "integration-servers/facebook-instagram-server.js"
        ],
        "description": "Facebook Page insights & Instagram media (Meta Graph)",
        "category": "social",
        "enabled": false
      },
      "spotify": {
        "type": "stdio",
        "command": "node",
        "args": [
          "integration-servers/spotify-server.js"
        ],
        "description": "Spotify track search (requires token)",
        "category": "media",
        "enabled": false
      }
  }
}