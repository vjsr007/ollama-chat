{
  "version": "1.0.0",
  "description": "MCP servers configuration for Ollama Chat - Functional servers only",
  "servers": {
    "filesystem": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-filesystem",
        "D:\\MyProjects\\ollama-chat"
      ],
      "description": "Secure file system access",
      "category": "core",
      "enabled": true
    },
    "github": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-github"
      ],
      "description": "GitHub integration (repos, issues, PRs)",
      "category": "development",
      "enabled": true
    },
    "puppeteer": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-puppeteer"
      ],
      "description": "Web automation with Puppeteer",
      "category": "automation",
      "enabled": true
    },
    "memory": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-memory"
      ],
      "description": "Persistent memory system",
      "category": "core",
      "enabled": true
    },
    "brave-search": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-brave-search"
      ],
      "description": "Web search with Brave Search API (requires BRAVE_API_KEY)",
      "category": "search",
      "enabled": false,
      "env": {
        "BRAVE_API_KEY": ""
      }
    },
    "copilot-terminal": {
      "type": "stdio",
      "command": "node",
      "args": [
        "src/shared/infrastructure/mcp/servers/copilot-terminal-server.js"
      ],
      "description": "AI-powered terminal assistance with Copilot integration",
      "category": "development",
      "enabled": true,
      "priority": 1,
      "env": {
        "NODE_ENV": "production",
        "MAX_TERMINALS": "20",
        "COMMAND_TIMEOUT": "30000"
      }
    }
  }
}
