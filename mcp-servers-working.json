{
  "version": "1.0.0",
  "description": "MCP server configuration for Ollama Chat - Only functional servers",
  "servers": {
    "filesystem": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-filesystem",
        "D:\\MyProjects\\ollama-chat"
      ],
  "description": "Secure file system access",
      "category": "core",
      "enabled": true
    },
    "github": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-github"
      ],
  "description": "GitHub integration (repos, issues, PRs)",
      "category": "development",
      "enabled": true
    },
    "puppeteer": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-puppeteer"
      ],
  "description": "Web automation with Puppeteer",
      "category": "automation",
      "enabled": true
    },
    "memory": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-memory"
      ],
  "description": "Persistent memory system",
      "category": "core",
      "enabled": true
    },
    "brave-search": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-brave-search"
      ],
  "description": "Web search using Brave Search API (requires BRAVE_API_KEY)",
      "category": "search",
      "enabled": false,
      "env": {
        "BRAVE_API_KEY": ""
      }
    }
  }
}
